<!DOCTYPE html>
<html>
  <head>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Whatevfur</a>
        </div>
        <ul class="nav navbar-nav">
          <li class="active"><a href="/">Home</a></li>
          <%if !session[:user_id]%>   <!-- if not logged in  -->
          <%else%>  <!-- user is logged in -->
          <li><a href="/listings/new">Create New Listing</a></li>
          <li><a href="/user/<%=current_user.id%>/listings">My Listings</a></li>
          <%end%>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <%if !session[:user_id]%>   <!-- if not logged in  -->
          <li><a href="/users/new"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
          <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
          <%else%>  <!-- user is logged in -->
          <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
          <li><a href="/users/<%=current_user.id%>"><span class="glyphicon glyphicon-user"></span> <%=current_user.name%></a></li>
          <%end%>
        </ul>
      </div>
    </nav>

    

    <title>Whatevfur</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


  </head>

  <body>
    <%= yield %>
  </body>
</html>
